@{
    ViewData["Title"] = "Login";

}

<div class="text-center">

    @if (TempData["Message"] != null)
    {
    <script type="text/javascript">

            window.onload = function () {
                $('#loginerrormodal').modal('show');
            };
    </script>

    }

    <!-- Section: Design Block -->
    <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image bg-gradient" style=" height: 350px; background: linear-gradient(160deg, hsl(119deg 97% 29% / 95%), #f3838300);">
            <img style="height: 126px;" src="~/Images/ztbllogo.png"/>
        </div>
        <!-- Background image -->

        <div class="card mx-4 mx-md-5 shadow-5-strong" style=" margin-top: -100px; backdrop-filter: blur(50px); background: linear-gradient(45deg, #f29c9c, #7361dbb5);">
            <div class="card-body py-5 px-md-5">

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-6">
                        <h2 class="fw-bold mb-5" style="color:white">Audit & Inspection Solution</h2>
                        <form action="/Login/DoLogin" method="post">
                            <!--<small class="font-weight-bold text-danger">Incorrect UserName or Password</small>-->
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input required type="number" placeholder="P.P Number" id="inputPPNoField" name="PPNumber" class="form-control" />
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input required type="password" placeholder="Password" id="inputPassword" name="Password" class="form-control" />
                            </div>



                            <!-- Submit button -->
                            <button id="submitLoginButton" type="submit" class="btn btn-block mb-4" style="background: beige; " onclick="doLoginSubmit();">
                                Login
                            </button>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->

</div>
<div class="modal" id="loginerrormodal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title">Invalid Login Credentials</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Please Enter Valid P.P. Number & Password</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>